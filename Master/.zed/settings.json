{
    "languages": {
        "C++": {
            "format_on_save": "on",
            "tab_size": 4,
            "indent_size": 4
        }
    },
    "lsp": {
        "Arduino": {
            "binary": {
                "path": "/home/fire1/Apps/ArduinoIde/resources/app/lib/backend/resources/arduino-language-server",
                "arguments": [
                    "-cli",
                    "/home/fire1/Apps/ArduinoIde/resources/app/lib/backend/resources/arduino-cli",
                    "-fqbn",
                    "arduino:avr:mega",
                    "-log"
                ]
            }
        },
        "clangd": {
            "binary": {
                "path": "/home/fire1/Apps/ArduinoIde/resources/app/lib/backend/resources/arduino-language-server",
                "ignore_system_version": false,
                "arguments": [
                    "-cli",
                    "/home/fire1/Apps/ArduinoIde/resources/app/lib/backend/resources/arduino-cli",
                    "-clangd",
                    "/home/fire1/Apps/ArduinoIde/resources/app/lib/backend/resources/clangd",
                    "-cli-config",
                    "$HOME/.arduino15/arduino-cli.yaml",
                    "-fqbn",
                    "arduino:avr:mega",
                    "-log"
                ]
            }
        }
    }
}
